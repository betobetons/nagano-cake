<div class="container pt-3">
  <div class="my-3">
    <h3><span class="bg-light">注文履歴詳細</span></h3>
  </div>
  <div class="row">
    <table>
      <tr>
        <th class="pr-4 pb-2">購入者</th>
        <td  class="pb-2">
          <%= link_to admin_customer_path(@order.customer) do %>
            <%= @order.customer.last_name %><%= @order.customer.first_name %>
          <% end %>
        </td>
      </tr>
      <tr>
        <th class="pr-4 pb-2">注文日</th>
        <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
      </tr>
      <tr>
        <th class="pr-4 pb-2">配送先</th>
        <td>〒<%= @order.post_code %> <%= @order.address %><br>
          <%= @order.name %>
        </td>
      </tr>
      <tr>
        <th class="pr-4 pb-2">支払方法</th>
        <td><%= @order.payment_i18n %></td>
      </tr>
      <tr>
        <th class="pr-4 pb-2">注文ステータス</th>
          <td>
            <%= form_with model: @order, url: admin_order_path, method: :patch do |f| %>
            <div class="d-flex">
              <%= f.select :status, Order.statuses.keys.map { |k| [Order.statuses_i18n[k], k] }, {}, class: "form-control w-50" %>
                <%= f.hidden_field :id, :value => @order.id %>
            </div>
              <%= f.submit '更新', class: 'btn btn-success' %>
            <% end %>
          </td>
      </tr>
    </table>
  </div>
  <div class="row">
    <div class="col-8">
      <table class="table border-top border-bottom">
        <thead>
          <tr>
            <th class="table-active">商品名</th>
            <th class="table-active">単価(税込)</th>
            <th class="table-active">数量</th>
            <th class="table-active">小計</th>
            <th class="table-active">製作ステータス</th>
            <th class="table-active"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @order_details.each do |order_detail| %>
          <tr>
          <td class="col-4"><%= order_detail.item.name %></td>
          <td class="col-2"><%= number_to_currency((order_detail.price * 1.1).floor, unit: '',delimiter: ',') %></td>
          <td><%= order_detail.quantity %></td>
          <td><%= number_to_currency((order_detail.price * 1.1 * order_detail.quantity).floor, unit: '',delimiter: ',') %></td>
          <%= form_with model: order_detail, url: admin_order_detail_path(order_detail), method: :patch do |f| %>
          <td><%= f.select :making_status, OrderDetail.making_statuses.keys.map { |k| [OrderDetail.making_statuses_i18n[k], k] }, { selected: order_detail.making_status }, class: "form-control" %></td>
        　<td><%= f.submit '更新', class: 'btn btn-success' %></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-3 offset-1">
      <table>
        <tr>
          <th class="col-sm-3  pb-2">商品合計</th>
          <td class="col-sm-2 pb-2"><%= number_to_currency((@order.total - @order.fee).floor, unit: '',delimiter: ',') %></td>
        </tr>
        <tr>
          <th class="col-sm-3  pb-2">送料</th>
          <td class="col-sm-2  pb-2"><%= number_to_currency((@order.fee).floor, unit: '',delimiter: ',') %></td>
        </tr>
        <tr>
          <th class="col-sm-3  pb-2">請求金額合計</th>
          <td class="col-sm-2  pb-2"><%= number_to_currency((@order.total).floor, unit: '',delimiter: ',') %></td>
        </tr>
      </table>
    </div>
  </div>
</div>