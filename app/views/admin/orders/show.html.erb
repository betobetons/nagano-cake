<div class="container pt-3">
  <span style="background-color: #ECECEC; font-weight: bold;">注文履歴詳細</span>
  <div class="row">
    <table>
      <tr>
        <th class="pr-4">購入者</th>
        <td>
          <%= link_to admin_customer_path(@order.customer) do %>
            <%= @order.customer.first_name %><%= @order.customer.last_name %>
          <% end %>
        </td>
      </tr>
      <tr>
        <th class="pr-4">注文日</th>
        <td><%= @order.created_at.strftime("%Y/%m/%d") %></td>
      </tr>
      <tr>
        <th class="pr-4">配送先</th>
        <td>〒<%= @order.post_code %> <%= @order.address %><br>
          <%= @order.name %>
        </td>
      </tr>
      <tr>
        <th class="pr-4">支払方法</th>
        <td><%= @order.payment_i18n %></td>
      </tr>
      <tr>
        <th class="pr-4">注文ステータス</th>
        <td>
        <%= form_with model: @order, url: admin_order_path, method: :patch do |f| %>
          <%= f.select :status, Order.statuses.keys.map { |k| [Order.statuses_i18n[k], k] }, {} %>
          <%= f.hidden_field :id, :value => @order.id %>
        <%= f.submit '更新', class: 'btn btn-success' %>
        <% end %>
      </tr>
    </table>
  </div>
  <div class="row">
    <div class="col-7">
      <table class="border-top border-bottom">
        <thead>
          <tr>
            <th class="table-active">商品名</th>
            <th class="table-active">単価(税込)</th>
            <th class="table-active">数量</th>
            <th class="table-active">小計</th>
            <th class="table-active">製作ステータス</th>
            <th class="table-active"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @order_details.each do |order_detail| %>
          <tr>
          <td class="pt-2 pr-4 pb-2 pl-4"><%= order_detail.item.name %></td>
          <td class="pt-2 pr-4 pb-2 pl-4"><%= number_to_currency((order_detail.price * 1.1).floor, unit: '',delimiter: ',') %></td>
          <td class="pt-2 pr-4 pb-2 pl-4"><%= order_detail.quantity %></td>
          <td class="pt-2 pr-4 pb-2 pl-4"><%= number_to_currency((order_detail.price * 1.1 * order_detail.quantity).floor, unit: '',delimiter: ',') %></td>
          <%= form_with model: order_detail, url: admin_order_detail_path(order_detail), method: :patch do |f| %>
          <td class="pt-2 pr-4 pb-2 pl-4"><%= f.select :making_status, OrderDetail.making_statuses.keys.map { |k| [OrderDetail.making_statuses_i18n[k], k] }, { selected: order_detail.making_status } %></td>
        　<td class="pt-2 pr-4 pb-2 pl-4"><%= f.submit '更新', class: 'btn btn-success btn-sm' %></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-3 offset-1">
      <table>
        <tr>
          <th>商品合計</th>
          <td><%= number_to_currency((@order.total - @order.fee).floor, unit: '',delimiter: ',') %></td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= number_to_currency((@order.fee).floor, unit: '',delimiter: ',') %></td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td><%= number_to_currency((@order.total).floor, unit: '',delimiter: ',') %></td>
        </tr>
      </table>
    </div>
  </div>
</div>