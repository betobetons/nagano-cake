<div class="container mx-auto">
  <%= flash[:notice] %>
  <div class="row my-3 justify-content-center">
    <div class="col-10">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="col-2 mb-0 text-center px-2" style="font-size: 1.3rem; background-color: #f5deb3;">商品一覧</h2>
        <%= link_to new_admin_item_path, class: 'btn btn-outline-secondary rounded-circle shadow-sm' do %>
          <i class="fa-solid fa-plus"></i>
        <% end %>
      </div>
      <table class="table table-bordered">
        <thead>
          <tr class="table-active">
            <th class="p-3">商品ID</th>
            <th class="p-3">商品名</th>
            <th class="p-3">税抜価格</th>
            <th class="p-3">ジャンル</th>
            <th class="p-3">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td class="p-3"><%= item.id %></td>
              <td class="p-3">
                <%= link_to admin_item_path(item.id), class: 'text-decoration-underline text-dark' do %>
                  <%= item.name %>
                <% end %>
              </td>
              <td class="p-3"><%= number_to_currency((item.price).floor, unit: '', delimiter: ',') %></td>
              <td class="p-3"><%= item.category.name %></td>
              <td class="p-3"><%= render 'status', item: item %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center mt-3">
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>
