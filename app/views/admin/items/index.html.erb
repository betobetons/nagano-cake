<div class="container mx-auto container-fluid">
  <div class="row my-3 justify-content-center">
    <div class="col-10 px-sm-0">
      <div style="display: flex; align-items: center; justify-content: space-between;">
        <span class="pr-3 pl-3" style="font-size: 1.3rem; background-color: #ECECEC; font-weight: bold;">商品一覧</span>
        <div style="text-align: right;">
          <%= link_to new_admin_item_path, class: 'rounded-circle', style: 'padding: 10px; box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.3); display: inline-block;' do %>
            <i class="fa-solid fa-plus text-secondary"></i>
          <% end %>
        </div>
      </div>
      <div class="col-12 mt-3">
        <table class="w-100" style="border-top: 2px solid gray; border-bottom: 2px solid gray;">
          <thead>
            <tr>
              <th class="table-active" style="padding: 10px;">商品ID</th>
              <th class="table-active" style="padding: 10px;">商品名</th>
              <th class="table-active" style="padding: 10px;">税抜価格</th>
              <th class="table-active" style="padding: 10px;">ジャンル</th>
              <th class="table-active" style="padding: 10px;">ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each do |item| %>
              <tr>
                <td style="padding: 10px;"><%= item.id %></td>
                <td style="padding: 10px;">
                  <%= link_to admin_item_path(item.id), style: 'color: black; text-decoration: underline;' do %>
                    <%= item.name %>
                  <% end %>
                </td>
                <td style="padding: 10px;"><%= number_to_currency((item.price).floor, unit: '', delimiter: ',') %></td>
                <td style="padding: 10px;"><%= item.category.name %></td>
                <td style="padding: 10px;"><%= render 'status', item: item %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div class="d-flex justify-content-center mt-3">
          <%= paginate @items %>
        </div>
      </div>
    </div>
  </div>
</div>
