<h1>商品一覧</h1>
<div class="btn btn-success">
  <%= link_to "アイテム追加", new_admin_item_path %> 
</div>
<table>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @items.each do |item| %>
    </tr>
      <td><%= item.id %></td>
      <td>
        <%= link_to admin_item_path(item.id) do %>
        <%= item.name %>
        <% end %>
      </td>
      <td><%= item.price %></td>
      <td><%= item.category.name %></td>
      <td><%= render 'status', item: item %></td>
    <% end %>
  </tbody>
</table>
