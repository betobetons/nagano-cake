<%= stylesheet_link_tag 'custom', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="container-fluid">
  <div class="row my-3 justify-content-center">
    <div class="col-7 m-4">
      <span class="pr-3 pl-3" style="font-size: 1.3rem; background-color: #ECECEC; font-weight: bold;">商品新規登録</span>
    </div>
  </div>
  <div class="row my-3 justify-content-center">
    <div class="col-5">
      <%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
        <table>
          <tr>
            <th>商品画像</th>
            <td class="pt-1 pb-1">
              <%= f.file_field :image, accept: "image/*", class: "form-control border-0" %> <!-- border-0を追加 -->
            </td>
          </tr>
          <tr>
            <th>商品名</th>
            <td class="p-1">
              <%= f.text_field :name, class: "form-control", style: 'color: #6c757d;', placeholder: '商品名', onfocus: "this.style.color='black';" %>
            </td>
          </tr>
          <tr>
            <th class="pt-3" style="vertical-align: top;">商品説明</th>
            <td class="p-1">
              <%= f.text_area :description, class: "form-control", style: 'height: 150px;color: #6c757d;', placeholder: 'ここに説明文を記述します', onfocus: "this.style.color='black';" %>
            </td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td class="p-1">
              <%= f.select :category_id, options_for_select(Category.all.collect { |c| [c.name, c.id] }), prompt: false, class: "form-control" %>
            </td>
          </tr>
          <tr>
            <th>税抜価格</th>
            <td class="p-1">
              <%= f.text_field :price, class: "form-control", style: 'color: #6c757d;', placeholder: '1000', onfocus: "this.style.color='black';" %><td>円</td>
            </td>
          </tr>

        </table>
        <div class="row my-3 justify-content-center">
          <%= f.submit "新規登録", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
