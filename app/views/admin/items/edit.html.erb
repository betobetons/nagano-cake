<div class="container-fluid">
  <div class="row my-3 justify-content-center">
    <div class="col-7 m-4">
    <span class="pr-3 pl-3" style="font-size: 1.3rem; background-color: #ECECEC; font-weight: bold;">商品編集</span>
    </div>
  </div>
  <div class="row my-3 justify-content-center">
    <div class="col-5">  
      <%= form_with model: @item, url: admin_item_path do |f| %>
        <table>
          <tr>
            <th>商品画像</th>
            <td class="pt-1 pb-1">
              <%= f.file_field :image %>
            </td>
          </tr>
          <tr>
            <th>商品名</th>
            <td class="p-1">
              <%= f.text_field :name %>
            </td>
          </tr>
          <tr>
            <th class="pt-3" style="vertical-align: top;">商品説明</th>
            <td>
              <%= f.text_area :description, class: "form-control", style: 'height: 150px;color: #6c757d;', placeholder: 'ここに説明文を記述します', onfocus: "this.style.color='black';" %>
            </td>
          </tr>
          <tr>
            <th>ジャンル</th>
            <td class="p-1">
              <%= f.collection_select :category_id, Category.all, :id, :name %>
            </td>
          </tr>
          <tr>
            <th>税抜価格</th>
            <td class="p-1">
              <%= f.text_field :price, class: "form-control", style: 'color: #6c757d;', placeholder: '1000', onfocus: "this.style.color='black';" %><td>円</td>
            </td>
          </tr>
          <tr>
            <th>
              <label for="item_is_active" class="d-flex align-items-center">
                販売ステータス
              </label>
            </th>
            <td class="p-1">
              <%= f.radio_button :is_active, true %>
              <%= f.label :is_active_true, '販売中' %>
              <%= f.radio_button :is_active, false %>
              <%= f.label :is_active_false, '販売停止中' %>
            </td>
          </tr> 
        </table>
        <div class="row my-3 justify-content-center">
          <%= f.submit "変更を保存", class: 'btn btn-success btn-lg', style: 'border-radius: 10px;' %>
        </div>        
      <% end %>
    </div>
  </div>
</div>
<%= render 'is_active', item: @item %>