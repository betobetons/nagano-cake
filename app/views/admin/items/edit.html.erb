<h1>商品編集</h1>

<%= form_with model: @item, url: admin_item_path do |f| %>
  <table>
    <tr>
      <td>商品画像</td>
      <td>
        <%= f.file_field :image %>
      </td>
    </tr>
    <tr>
      <td>商品名</td>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <td>商品説明</td>
      <td><%= f.text_area :description %></td>
    </tr>
    <tr>
      <td>ジャンル</td>
      <td><%= f.collection_select :category_id, Category.all, :id, :name %></td>
    </tr>
    <tr>
      <td>税抜価格</td>
      <td><%= f.text_field :price %>円</td>
    </tr>
    <tr>
      <td>販売ステータス</td>
      <td></td>
    </tr>
    <%= f.submit "変更を保存" %>
  </table>
<% end %>