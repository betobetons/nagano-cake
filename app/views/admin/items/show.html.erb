<%= stylesheet_link_tag 'custom', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="container-fluid">
  <div class="row my-3 justify-content-center">
    <div class="col-9">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-center px-4 g" style="font-size: 1.3rem; background-color: #f5deb3;">
          商品詳細
        </h2>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-4 d-flex justify-content-center mt-5">
        <%= image_tag @item.image, size: '250x200' %>
      </div>
      <div class="col-7 mt-5">
        <table class="table">
          <tr>
            <th class="p-3">商品名</th>
            <td class="p-3"><%= @item.name %></td>
          </tr>
          <tr>
            <th class="p-3">商品説明</th>
            <td class="p-3"><%= @item.description %></td>
          </tr>
          <tr>
            <th class="p-3">ジャンル</th>
            <td class="p-3"><%= @item.category.name %></td>
          </tr>
          <tr>
            <th class="p-3">
              税込価格<br>
              (税抜価格)
            </th>
            <td class="p-3">
              <%= number_to_currency((@item.price * 1.1).floor, unit: '', delimiter: ',') %>円
              (<%= number_to_currency(@item.price.floor, unit: '', delimiter: ',') %>円)
            </td>
          </tr>
          <tr>
            <th class="p-3">販売ステータス</th>
            <td class="p-3"><%= render 'status', item: @item %></td>
          </tr>
        </table>
        <%= link_to "編集する", edit_admin_item_path(@item), class: 'btn btn-success' %>
      </div>
    </div>
  </div>
</div>
