<%= stylesheet_link_tag 'custom', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="container">
  <%= render "public/shared/error_messages", resource: @category %>

  <div class="row my-3 justify-content-center">
    <div class="col-3 m-4">
      <h2 class="mb-2 text-center" style="font-size: 1.3rem; background-color: #f5deb3;">ジャンル一覧・追加</h2>
    </div>
  </div>

  <!-- 新規登録フォーム -->
  <%= form_with model: @category, url: admin_categories_path, local: false, remote: true do |f| %>
    <div class="row mt-4 justify-content-center">
      <div class="col-8 ml-5 d-flex align-items-center">
        <span class="ml-5 px-5">ジャンル名</span>
        <span class="pl-2 pr-5"><%= f.text_field :name, class: 'form-control' %></span>
        <span><%= f.submit "新規登録", class: 'btn btn-success' %></span>
      </div>
    </div>
  <% end %>
  <!-- ジャンル一覧のテーブル -->
  <div class="row mt-4">
    <div class="col">
      <div class="flash-message text-center"></div>
      <table class="table table-hover w-50 mx-auto">
        <thead>
          <tr>
            <th class="table-active px-3">ジャンル</th>
            <th class="table-active px-3 text-center">編集</th>
            <th class="table-active px-3 text-center">削除</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr id="category_<%= category.id %>">
              <td class="p-3"><%= category.name %></td>
              <td class="p-3 text-center">
                <%= link_to "編集する", edit_admin_category_path(category), class: 'btn btn-info btn-sm' %>
              </td>
              <td class="p-3 text-center">
                <%= link_to "削除", admin_category_path(category), method: :delete, data: { remote: true }, class: 'btn btn-danger btn-sm' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
