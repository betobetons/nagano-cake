


<div class="container">
  <div class="row">
    <div class="col-6 text-center my-4 mx-auto">
      <span class="pr-3 pl-3" style="font-size: 1.3rem; background-color: #ECECEC; font-weight: bold;">管理者ログイン</span>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row field ">
    <div class="col-4 text-right">
      <%= f.label :"メールアドレス", class: 'p-1' %><br />
    </div>
    <div class="col-4 mb-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
    </div>
  </div>

  <div class="row field">
    <div class="col-4 text-right">
      <%= f.label :"パスワード", class: 'p-1' %>
    </div>
    <div class="col-4 mb-3">
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
    </div>
  </div>

  <!--< if devise_mapping.rememberable? %>-->
  <!--  <div class="field">-->
  <!--    <= f.check_box :remember_me %>-->
  <!--    <= f.label :"ログインを記憶する" %>-->
  <!--  </div>-->
  <!--< end %>-->
  </div>


  <div class="actions text-center">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>



