<h1>ショッピングカート</h1>
<div><%= link_to "カートを空にする", carts_destroy_all_path, method: :delete %></div>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込み)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>

    <tbody>
      <% @carts.each do |cart| %>
        <%= form_with model: cart, url: cart_path(cart) do |f| %>
        <tr>
          <td><%= image_tag cart.item.image, size: "100x100" %><%= cart.item.name %></td>
          <td><%= (cart.item.price * 1.1).floor %></td>
          <td><%= f.select :quantity, *[1..10] %><%= f.submit "変更" %></td>
          <td><%= (cart.item.price * 1.1 * cart.quantity).floor %></td>
          <td><%= link_to "削除", cart_path(cart), method: :delete %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </thead>
</table>
<div><%= link_to "買い物を続ける", items_path %></div>
<div><%= link_to "情報入力に進む", new_order_path %></div>