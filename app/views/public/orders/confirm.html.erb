<h1>注文情報確認</h1>
<tabele>
    <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
    </thead>
    <tbody>
      <% @carts.each do |cart| %>
        <%= form_with model: cart, url: cart_path(cart) do |f| %>
        <tr>
          <td><%= image_tag cart.item.image, size: "100x100" %><%= cart.item.name %></td>
          <td><%= cart.item.taxin_price.floor %></td>
          <td><%= cart.quantity %></td>
          <td><%= cart.sum_of_price.floor %></td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
</tabele>
<table>
    <tr>
        <td>送料</td>
        <td><%= @order_fee %></td>
    </tr>
    <tr>
        <td>商品合計</td>
        <td><%= @total.round.to_s(:delimited)%></td>
    </tr>
    <tr>
        <td>請求金額</td>
        <td><%= (@order_fee + @total).round.to_s(:delimited) %></td>
    </tr>
</table>
