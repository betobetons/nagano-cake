<%= stylesheet_link_tag 'custom', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="container col-8">
  <%= flash[:notice] %>
  <div class="row">
    <div class="col mt-4 mb-4">
      <span style=" background-color: #ECECEC; font-weight: bold; font-size: 23px">　マイページ　</span>
    </div>
  </div>
  <div class="row ">
    <div class="col-3 mt-4">
      <h3>登録情報</h3>
    </div>
    <div class="col mt-4 text-left " >
      <%= link_to "編集する　", customers_information_edit_path, class: "btn btn-success"  %>
    </div>
  </div>
  <div class="row mt-3">
    <table class="table table-bordered">
      <tr>
        <td class="col-4 bg-light">氏名</td>
        <td class="col-8"><%= @customer.last_name %> <%= @customer.first_name %></td>
      </tr>
      <tr>
        <td class="col-4 bg-light">カナ</td>
        <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <td class="col-4 bg-light">郵便番号</td>
        <td><%= @customer.post_code %></td>
      </tr>
      <tr>
        <td class="col-4 bg-light">住所</td>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <td class="col-4 bg-light">電話番号</td>
        <td><%= @customer.phone %></td>
      </tr>
      <tr>
        <td class="col-4 bg-light">メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
    </table>
  </div>
  <div class="row mt-4">
    <div class="col-3 mt-2"><h4>配送先</h4></div>
    <div class="col-6 mt-3 text-left">
    <%= link_to "一覧を見る", addresses_path(@customer), class: "btn btn-primary" %>
    </div>
  </div>
  <div class="row mt-4">
    <div class="col-3 mt-2"><h4>注文履歴</h4></div>
    <div class="col-6 mt-3">
      <%= link_to "一覧を見る", orders_path(@customer), class: "btn btn-primary" %>
    </div>
  </div>
</div>